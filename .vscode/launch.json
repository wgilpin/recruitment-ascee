{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },

    {
      "name": "Python: E2E",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/server/tests/e2e_test.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: unit tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/server/tests/test_all.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Terminal flask",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/server/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach (Remote Debug)",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost"
    },
  {
    "name": "Flask",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {
      "FLASK_APP": "app.py",
      "FLASK_ENV": "development",
      "FLASK_DEBUG": "0"
    },
    "args": [
      "run",
      "--no-debugger",
      "--no-reload"
    ],
  },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
    },
  ]
}